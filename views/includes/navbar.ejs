<style>
  .btn-search {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
    margin-right: 17rem;
    font-size: 0.8rem;
  }

  .btn-search:hover {
    background-color: #fe424d;
    color: #fff;
  }

  .btn-search i {
    display: inline;
    margin-right: 0.5rem;
  }

  .search-input {
    border-radius: 25px;
    padding: 0.5rem 7rem 0.5rem 7rem;
    font-size: 0.8rem;
  }

  .buttonss{
    border: 1.5px solid black;
    border-radius: 1.5rem;
    margin-left: 0.5rem;
    display: flex;
    align-items: center;
  }
</style>


<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse navbar-nav" id="navbarNav">
      <a class="nav-link" href="/listings">Explore</a>
    </div>

    <div class="navbar-nav ms-auto mr-3">
      <form class="d-flex" role="search">
        <input class="form-control me-2 search-input" type="search" placeholder="Search destinations">
        <button class="btn btn-search" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
      </form>
    </div>

    <div class="navbar-nav ms-auto" id="navbarNav">
      <a class="nav-link" href="/listings/new">Add new listing</a>
        <% if (!currUser){ %>
          <div class="buttonss"></div>
          <a class="nav-link" href="/signup"><b>Sign up</b></a>
          <a class="nav-link" href="/login"><b>Login</b></a>
        <% } %>

        <% if (currUser){ %>
          <div class="buttonss"></div>
            <a class="nav-link" href="/logout"><b>Logout</b></a>
        <% } %>
    </div>
  </div>
</nav>